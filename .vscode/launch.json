            "miDebuggerServerAddress": "localhost:1234",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/kernel/src",
            "environment": [],
            "externalConsole": true,
            "launchCompleteCommand": "exec-run",
